<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{DynamicResource PageBackgroundColor}"
             xmlns:local="clr-namespace:Qel.Health.Meditation.ApplicationService"
             x:Class="Qel.Health.Meditation.ApplicationService.LoginPage">

    <StackLayout>
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="true" />

        <Button Text="Login" Clicked="LoginButton_Clicked" />
        <Button Text="Register" Clicked="RegisterButton_Clicked" />
    </StackLayout>

</ContentPage>
